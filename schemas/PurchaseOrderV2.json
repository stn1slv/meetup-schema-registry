{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/product.schema.json",
    "title": "PurchaseOrder",
    "description": "Purchase order",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 512,
            "description": "Change1"
        },
        "sku": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "minimum": 0
        },
        "orderDate": {
            "type": "string",
            "format": "date"
        },
        "shipTo": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string",
                    "default": "US",
                    "minLength": 2,
                    "maxLength": 2
                },
                "state": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2
                },
                "city": {
                    "type": "string"
                },
                "street": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "zip": {
                    "type": "string"
                }
            }
        },
        "billTo": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "zip": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "name",
        "sku",
        "price",
        "orderDate",
        "shipTo"
    ]
}